#ifndef REXCEPTION_HPP
#define REXCEPTION_HPP

#include <exception>
#include <string>

namespace sh{

class RException : public std::exception{

private:
    std::string _message;

public:
    RException( const std::string& message );
    virtual ~RException() throw() {}

    virtual const std::string& Message() const throw();

};

inline const std::string& RException::Message() const throw(){
    return _message;
}

}// namespace

#endif // !REXCEPTION_HPP
